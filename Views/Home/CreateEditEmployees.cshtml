@model Employee
@{
    ViewData["Title"] = "Create / Edit";
}

<form asp-controller="Home" asp-action="CreateEditEmployeeRecord" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5>Edit Employee</h5>
        </div>

        <div class="card-body">

            <input hidden asp-for="ID" />

            <div class="row">
                <div class="col-form-label">Employee full name:</div>
                <div class="col">
                    <input class="form-control" asp-for="Name" type="text" />
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="col-form-label">Role:</div>
                    <input class="form-control" asp-for="Role" type="text" />
                </div>
                <div class="col-6">
                    <div class="col-form-label">Department:</div>
                    <input class="form-control" asp-for="Department" type="text" />
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="col-form-label">Date of Birth:</div>
                    <input class="form-control" asp-for="DateOfBirth" type="date" />
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>

    </div>

</form>
